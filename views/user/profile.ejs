    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const editIcon = document.querySelector(".edit-icon");
        const profileImageInput = document.getElementById("profileImageInput");

        editIcon.addEventListener("click", function () {
          profileImageInput.click();
        });
      });
    </script>
    <script>
      function validateForm() {
        // Custom validation for the name
        const nameInput = document.getElementById("editName");
        const nameError = document.getElementById("nameError");
        const nameRegex = /^[a-zA-Z\s]+$/;

        if (!nameRegex.test(nameInput.value.trim())) {
          nameError.textContent =
            "Invalid name. Only letters and spaces are allowed.";
          return false;
        } else if (nameInput.value.trim().length > 12) {
          nameError.textContent = "Name cannot be more than 12 characters.";
          return false;
        } else {
          nameError.textContent = "";
        }

        // Image validation logic
        const imagesInput = document.getElementById("editProfilePhoto");
        const imageError = document.getElementById("imageError");
        const profileImage = document.getElementById("profileImage");

        if (imagesInput.files.length === 0) {
          imageError.textContent = "Please select at least one image";
          return false;
        } else {
          const allowedExtensions = ["jpg", "jpeg", "png", "gif", "webp"];
          const invalidFiles = Array.from(imagesInput.files).filter((file) => {
            const extension = file.name.split(".").pop().toLowerCase();
            return !allowedExtensions.includes(extension);
          });

          if (invalidFiles.length > 0) {
            imageError.textContent =
              "Please select only image files (jpg, jpeg, png, gif, webp)";
            return false;
          } else {
            imageError.textContent = "";

            // Display the selected image (optional)
            if (imagesInput.files[0]) {
              const reader = new FileReader();
              reader.onload = function (e) {
                profileImage.src = e.target.result;
              };
              reader.readAsDataURL(imagesInput.files[0]);
            }
          }
        }

        // If all validations pass, return true
        return true;
      }
    </script>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const profileImage = document.getElementById("profileImage");
        const cropper = new Cropper(profileImage, {
          zoomable: true,
          scalable: true,
          aspectRatio: 1,
          viewMode: 1,
        });
      });
      function copyReferralCode() {
        const referralCodeElement = document.getElementById("referralCode");
        const referralCode = referralCodeElement.innerText;
        const tempInput = document.createElement("input");
        tempInput.value = referralCode;
        document.body.appendChild(tempInput);
        tempInput.select();
        document.execCommand("copy");
        document.body.removeChild(tempInput);
        Toastify({
          text: "Referral code copied to clipboard!",
          className: "info",
          close: true,
          style: {
            background: "#000",
            color: "#fff",
          },
        }).showToast();
      }
    </script>
