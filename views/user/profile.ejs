<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css"
      integrity="sha512-rGvJ5lczbaFoKILqW+GoJ4u3uqnn+8UEIzzVfTOY+TH+kYYkujWxlX+J+BRDpnLMOzTgKGhoEGqF1UzK7TU5fg=="
      crossorigin="anonymous"
    />

    <!-- Cropper.js JavaScript -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"
      integrity="sha512-FJ1dO8RVYTbj+8V0I7Kv6A/l5epg9GYptxFrHKqY4IjMmI/DtZDyLPQwSGx5fF2iU8oEzhZZDD6T0VotzafHHQ=="
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/profile.css" />

    <title>profile</title>
  </head>
  <body style="background-color: #eee">
    <%- include('./partial/header') %>
    <section>
      <div class="container py-5">
        <div class="row">
          <%-include('./partial/sidebar-profile')%>

          <div class="col-lg-8">
            <div class="card mb-4">
              <div class="card-body">
                <div class="card mb-4">
                  <div class="card-body text-center">
                    <img
                      src="<%=userdata.profileImage%>"
                      alt="avatar"
                      class="rounded-circle img-fluid"
                      style="width: 150px"
                    />

                    <h5 class="my-3">
                      <%= userdata ? userdata.name : 'N/A' %>
                    </h5>
                    <!-- <p class="text-muted mb-1">Full Stack Developer</p> -->
                    <!-- <p class="text-muted mb-4">Bay Area, San Francisco, CA</p> -->
                  </div>
                </div>
                <div>
                  <p class="edit-button">
                    <button
                      type="button"
                      class="btn"
                      style="padding: 0%"
                      data-toggle="modal"
                      data-target="#editProfileModal"
                    >
                      Edit
                    </button>
                    <!-- <img src=/photos/defaultprofile.jpeg" alt=""> -->
                  </p>
                </div>
                <div class="row mt-0">
                  <div class="col-sm-3">
                    <p class="mb-1 mt-0">Full Name:</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-1">
                      <%= userdata ? userdata.name : 'N/A' %>
                    </p>
                  </div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-1">Email:</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-1"><%=userdata.email%></p>
                  </div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-1">Phone number:</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-1">
                      <%=userdata ?userdata.phonenumber : 'N/A'%>
                    </p>
                  </div>
                </div>
                <div class="row"></div>
                <hr />

                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Referal link:</p>
                  </div>
                  <div class="col-sm-9 d-flex">
                    <p class="text-primary" id="referralCode">
                      http://localhost:3000/login?id=<%=userdata.Referalcode%>
                    </p>
                    <div style="margin-left: 120px">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        onclick="copyReferralCode()"
                        class="mt-1"
                        fill="currentColor"
                        class="bi bi-copy"
                        viewBox="0 0 16 16"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M4 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 5a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-1h1v1a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h1v1z"
                        />
                      </svg>
                    </div>
                  </div>

                  <div style="margin-left: 150px; font-size: 11px">
                    <p class="text-muted mt-0 ml-5 mb-0">
                      ask your friend to signup with this link and earn rewards!
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div
      class="modal fade"
      id="logoutModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="logoutModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">Are you sure you want to logout?</div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Cancel
            </button>
            <a href="/logout" class="btn btn-danger">Logout</a>
          </div>
        </div>
      </div>
    </div>
    <!-- At the end of the body, before the closing </body> tag -->
    <div
      class="modal fade"
      id="editProfileModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="editProfileModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- Your edit profile form goes here -->
            <form
              action="/editprofile"
              method="POST"
              enctype="multipart/form-data"
              onsubmit="return validateForm()"
            >
              <div class="form-group">
                <label for="editProfilePhoto">Profile Photo</label>
                <input
                  type="file"
                  class="form-control-file"
                  id="editProfilePhoto"
                  name="editProfilePhoto"
                  accept="image/*"
                />
                <img
                  class="mt-3"
                  id="profileImage"
                  src="<%=userdata.profileImage%>"
                  alt="avatar"
                  class="rounded-circle img-fluid"
                  style="width: 150px"
                />
              </div>

              <!-- Name -->

              <div class="form-group">
                <label for="editName">Full Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="editName"
                  name="editName"
                  value="<%= userdata ? userdata.name : '' %>"
                  required
                />
                <small id="nameError" class="text-danger"></small>
              </div>

              <!-- Email -->
              <div class="form-group">
                <label for="editEmail">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="editEmail"
                  name="editEmail"
                  inputmode="email"
                  value="<%= userdata ? userdata.email : '' %>"
                  readonly
                />
              </div>

              <!-- Phone Number -->
              <div class="form-group">
                <label for="editPhoneNumber">Phone Number</label>
                <input
                  type="tel"
                  class="form-control"
                  id="editPhoneNumber"
                  name="editPhoneNumber"
                  inputmode="tel"
                  value="<%= userdata ? userdata.phonenumber : '' %>"
                  readonly
                />
              </div>

              <button
                type="submit"
                class="btn"
                style="background-color: #000000; color: white"
              >
                Save Changes
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const editIcon = document.querySelector(".edit-icon");
        const profileImageInput = document.getElementById("profileImageInput");

        editIcon.addEventListener("click", function () {
          profileImageInput.click();
        });
      });
    </script>
    <script>
      function validateForm() {
        // event.preventDefault();
        // Custom validation for the profile photo file extension

        const nameInput = document.getElementById("editName");
        const nameError = document.getElementById("nameError");
        const nameRegex = /^[a-zA-Z\s]+$/;

        if (!nameRegex.test(nameInput.value.trim())) {
          nameError.textContent =
            "Invalid name. Only letters and spaces are allowed.";
          return false;
        } else {
          nameError.textContent = ""; // Clear the error message if valid
        }

        // Add more custom validation if needed

        // If everything is valid, return true to submit the form
        return true;
      }
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const profileImage = document.getElementById("profileImage");
        const cropper = new Cropper(profileImage, {
          zoomable: true,
          scalable: true,
          aspectRatio: 1, // You can adjust this to your desired aspect ratio
          viewMode: 1, // You can change this to 0, 1, 2 as per your requirement
        });
      });
      function copyReferralCode() {
        const referralCodeElement = document.getElementById("referralCode");
        const referralCode = referralCodeElement.innerText;
        const tempInput = document.createElement("input");
        tempInput.value = referralCode;
        document.body.appendChild(tempInput);
        tempInput.select();
        document.execCommand("copy");
        document.body.removeChild(tempInput);
        alert("Referral code copied to clipboard!");
      }
    </script>
  </body>
</html>
