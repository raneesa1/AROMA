<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/accountdetails.css" />

    <title>acccount details</title>
  </head>
  <body style="background-color: #eee">
    <%- include('./partial/header') %>
    <section>
      <div class="container py-5">
        <div class="row">
          <%-include('./partial/sidebar-profile')%> <%
          addressofuser.Address.forEach(address => { %>
          <div class="col-lg-8">
            <div class="card mb-4">
              <div class="card-body">
                <form action="/updateaddress/<%=address._id%>" method="post">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Address name</label>
                    <select
                      class="form-control"
                      type="addressname"
                      name="Addressname"
                      aria-valuenow="<%=address.Addressname%>"
                    >
                      <option>home</option>
                      <option>office</option>
                      <option>Hostel</option>
                      <!-- <option>For Someone else</option> -->
                    </select>
                  </div>
                  <!-- <div class="form-group">
                    <label for="exampleInputEmail1">Address name </label>
                    <input
                      type="addressname"
                      name="Addressname"
                      class="form-control"
                      value="<%=address.Addressname%>"
                    />
                  </div> -->
                  <!-- <hr /> -->

                  <div class="form-group">
                    <label for="exampleInputEmail1">First Name </label>
                    <input
                      type="text"
                      name="Firstname"
                      id="editedFirstname"
                      class="form-control"
                      value="<%=address.Firstname%>"
                    />
                    <small
                      id="editedFirstNameError"
                      class="text-danger"
                    ></small>
                  </div>

                  <div class="form-group">
                    <label for="exampleInputEmail1">Second Name </label>
                    <input
                      type="text"
                      id="editedSecondname"
                      name="Secondname"
                      class="form-control"
                      value="<%=address.Secondname%>"
                    />
                    <small
                      id="editedSecondNameError"
                      class="text-danger"
                    ></small>
                  </div>

                  <div class="form-group">
                    <label for="Address">Address </label>
                    <textarea
                      class="form-control"
                      rows="3"
                      name="Address"
                      id="editedAddress"
                    >
<%=address.Address%> </textarea
                    >
                    <small id="editedAddressError" class="text-danger"></small>
                  </div>

                  <div class="form-group">
                    <label for="phonenumber">Phone number</label>
                    <input
                      type="text"
                      name="PhoneNumber"
                      id="editedPhonenumber"
                      class="form-control"
                      value="<%=address.PhoneNumber%>"
                    />
                    <small
                      id="editedPhonenumberError"
                      class="text-danger"
                    ></small>
                  </div>
                  <div class="form-group">
                    <label for="City">State</label>
                    <input
                      type="text"
                      name="State"
                      id="editedState"
                      class="form-control"
                      value="<%=address.State%>"
                    />
                    <small id="editedStateError" class="text-danger"></small>
                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>
                  <div class="form-group">
                    <label for="City">City</label>
                    <input
                      type="text"
                      name="City"
                      id="editedCity"
                      class="form-control"
                      value="<%=address.City%>"
                    />
                    <small id="editedCityError" class="text-danger"></small>
                    <!-- <sma
                        <small
                      id="editedSecondNameError"
                      class="text-danger"
                    ></small>ll id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>
                  <div class="form-group">
                    <label for="City">Landmark</label>
                    <input
                      type="text"
                      name="Landmark"
                      class="form-control"
                      value="<%=address.Landmark%>"
                    />

                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>

                  <div class="form-group">
                    <label for="exampleSelect1">Country</label>
                    <select
                      class="form-control"
                      name="Country"
                      id="exampleSelect1"
                      aria-valuenow="<%=address.Country%>"
                    >
                      <option>India</option>
                      <option>Africa</option>
                      <option>America</option>
                      <option>Pakistan</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="Postcode">Post Code</label>
                    <input
                      type="text"
                      id="editedPincode"
                      name="Postcode"
                      class="form-control"
                      value="<%=address.Pincode%>"
                    />
                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                    <small id="editedPincodeError" class="text-danger"></small>
                  </div>
                  <button
                    class="btn text-light btn-block"
                    style="background-color: #000000; border-radius: 0%"
                    type="submit"
                    name="submit"
                    title="Edit Address"
                  >
                    SAVE
                  </button>
                  <button
                    class="btn btn-block btn-light border-dark"
                    style="border-radius: 0%"
                  >
                    CANCEL
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <% }); %>

    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>

    <script>
      document
        .querySelector("form")
        .addEventListener("submit", function (event) {
          function isEmpty(value) {
            const trimmedValue = value.trim();
            return trimmedValue === "";
          }

          function validatePhone(phonenumber) {
            const phoneRegex = /^\d{10}$/;
            return phoneRegex.test(phonenumber);
          }

          function validateAddress(address) {
            const minLength = 40;
            return address.trim().length >= minLength;
          }
          function validatePinc(pincode) {
            const pinRegex = /^\d{6}$/;
            return pinRegex.test(pincode);
          }

          const editedFirstname = document.getElementById("editedFirstname");
          const editedFirstnameValue = editedFirstname.value;
          const editedFirstnameError = document.getElementById(
            "editedFirstNameError"
          );

          const editedSecondname = document.getElementById("editedSecondname");
          const editedSecondnameValue = editedSecondname.value;
          const editedSecondnameError = document.getElementById(
            "editedSecondNameError"
          );

          const editedAddress = document.getElementById("editedAddress");
          const editedAddressValue = editedAddress.value;
          const editedAddressError =
            document.getElementById("editedAddressError");

          const editedState = document.getElementById("editedState");
          const editedStateValue = editedState.value;
          const editedStateError = document.getElementById("editedStateError");

          const editedCity = document.getElementById("editedCity");
          const editedCityValue = editedCity.value;
          const editedCityError = document.getElementById("editedCityError");

          const editedPincode = document.getElementById("editedPincode");
          const editedPincodeValue = editedPincode.value;
          const editedPincodeError =
            document.getElementById("editedPincodeError");

          const editedPhonenumber =
            document.getElementById("editedPhonenumber");
          const editedPhonenumberValue = editedPhonenumber.value;
          const editedPhonenumberError = document.getElementById(
            "editedPhonenumberError"
          );

          editedFirstnameError.textContent = "";
          editedSecondnameError.textContent = "";
          editedAddressError.textContent = "";
          editedStateError.textContent = "";
          editedCityError.textContent = "";
          editedPincodeError.textContent = "";
          editedPhonenumberError.textContent = "";

          if (isEmpty(editedFirstnameValue)) {
            editedFirstnameError.textContent = "First name can't be empty";
            event.preventDefault();
          }

          if (isEmpty(editedSecondnameValue)) {
            editedSecondnameError.textContent = "Second name can't be empty";
            event.preventDefault();
          }
          if (isEmpty(editedAddressValue)) {
            editedAddressError.textContent = "Address field can't be empty";
            event.preventDefault();
          }
          if (isEmpty(editedStateValue)) {
            editedStateError.textContent = "State field can't be be empty";
            event.preventDefault();
          }
          if (isEmpty(editedCityValue)) {
            editedCityError.textContent = "City field can't be empty";
            event.preventDefault();
          }
          if (isEmpty(editedPincodeValue)) {
            editedPincodeError.textContent = "Pincode field can't be empty";
            event.preventDefault();
          }
          if (isEmpty(editedPhonenumberValue)) {
            editedPhonenumberError.textContent =
              "Phone number field can't be empty";
            event.preventDefault();
          }
          if (!validatePhone(editedPhonenumberValue)) {
            editedPhonenumberError.textContent =
              "Phone number must contain 10 characters";
            event.preventDefault();
          }
          if (!validatePinc(editedPincodeValue)) {
            editedPincodeError.textContent = "Enter a valid pincode";
            event.preventDefault();
          }

          if (!validateAddress(editedAddressValue)) {
            editedAddressError.textContent =
              "Address should have at least 40 characters";
            event.preventDefault();
          }
        });
    </script>
    <div
      class="modal fade"
      id="logoutModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="logoutModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">Are you sure you want to logout?</div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Cancel
            </button>
            <a href="/logout" class="btn btn-danger">Logout</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
