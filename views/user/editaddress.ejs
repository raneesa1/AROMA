<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/accountdetails.css" />

    <title>acccount details</title>
  </head>
  <body style="background-color: #eee">
    <%- include('./partial/header') %>
    <section>
      <div class="container py-5">
        <div class="row">
          <div class="col-lg-4">
            <div class="card mb-4 mb-lg-0">
              <div class="card-body p-0">
                <ul class="list-group list-group-flush rounded-3">
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i class="fas fa-globe fa-lg text-warning"></i>
                    <p class="mb-0">
                      <a href="profile">My Account</a>
                    </p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i class="fas fa-globe fa-lg text-warning"></i>
                    <p class="mb-0">
                      <a href="accountdetails">Account Details</a>
                    </p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i class="fab fa-github fa-lg" style="color: #333333"></i>
                    <p class="mb-0"><a href="myorder">My Order</a></p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i class="fab fa-twitter fa-lg" style="color: #000000"></i>
                    <p class="mb-0"><a href="cart">Shopping Cart</a></p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i
                      class="fab fa-instagram fa-lg"
                      style="color: #000000"
                    ></i>
                    <p class="mb-0"><a href="wishlist">Wishlist</a></p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i
                      class="fab fa-facebook-f fa-lg"
                      style="color: #000000"
                    ></i>
                    <p class="mb-0"><a href="address">Address</a></p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i class="fab fa-twitter fa-lg" style="color: #000000"></i>
                    <p class="mb-0"><a href="wallet">Wallet</a></p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-3">
                    <i class="fab fa-twitter fa-lg" style="color: #000000"></i>
                    <p class="mb-0">
                      <button
                        type="button"
                        class="btn"
                        style="color: #000000"
                        data-toggle="modal"
                        data-target="#logoutModal"
                      >
                        Logout
                      </button>
                    </p>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <% addressofuser.Address.forEach(address => { %>
          <div class="col-lg-8">
            <div class="card mb-4">
              <div class="card-body">
                <form action="/updateaddress/<%=address._id%>" method="post">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Address name</label>
                    <select
                      class="form-control"
                      type="addressname"
                      name="Addressname"
                      aria-valuenow="<%=address.Addressname%>"
                    >
                      <option>home</option>
                      <option>office</option>
                      <option>Hostel</option>
                      <!-- <option>For Someone else</option> -->
                    </select>
                  </div>
                  <!-- <div class="form-group">
                    <label for="exampleInputEmail1">Address name </label>
                    <input
                      type="addressname"
                      name="Addressname"
                      class="form-control"
                      value="<%=address.Addressname%>"
                    />
                  </div> -->
                  <!-- <hr /> -->

                  <div class="form-group">
                    <label for="exampleInputEmail1">First Name </label>
                    <input
                      type="text"
                      name="Firstname"
                      class="form-control"
                      value="<%=address.Firstname%>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Second Name </label>
                    <input
                      type="text"
                      name="Secondname"
                      class="form-control"
                      value="<%=address.Secondname%>"
                    />
                  </div>

                  <div class="form-group">
                    <label for="Address">Address </label>
                    <textarea class="form-control" rows="3" name="Address">
<%=address.Address%></textarea
                    >
                  </div>

                  <div class="form-group">
                    <label for="phonenumber">Phone number</label>
                    <input
                      type="text"
                      name="PhoneNumber"
                      class="form-control"
                      value="<%=address.PhoneNumber%>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="City">State</label>
                    <input
                      type="text"
                      name="State"
                      class="form-control"
                      value="<%=address.State%>"
                    />
                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>
                  <div class="form-group">
                    <label for="City">City</label>
                    <input
                      type="text"
                      name="City"
                      class="form-control"
                      value="<%=address.City%>"
                    />
                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>
                  <div class="form-group">
                    <label for="City">Landmark</label>
                    <input
                      type="text"
                      name="Landmark"
                      class="form-control"
                      value="<%=address.Landmark%>"
                    />
                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>

                  <div class="form-group">
                    <label for="exampleSelect1">Country</label>
                    <select
                      class="form-control"
                      name="Country"
                      id="exampleSelect1"
                      aria-valuenow="<%=address.Country%>"
                    >
                      <option>India</option>
                      <option>Africa</option>
                      <option>America</option>
                      <option>Pakistan</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="Postcode">Post Code</label>
                    <input
                      type="text"
                      name="Postcode"
                      class="form-control"
                      value="<%=address.Pincode%>"
                    />
                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>
                  <button
                    type="submit"
                    class="btn text-light btn-lg"
                    style="background-color: #000000; border-radius: 0%"
                    type="submit"
                    name="submit"
                    title="Edit Address"
                  >
                    SAVE
                  </button>
                  <button
                    class="btn btn-lg btn-light border-dark"
                    style="border-radius: 0%"
                  >
                    CANCEL
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <% }); %>

    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
    <div
      class="modal fade"
      id="logoutModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="logoutModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">Are you sure you want to logout?</div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Cancel
            </button>
            <a href="/logout" class="btn btn-danger">Logout</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
