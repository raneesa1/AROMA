<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/home.css" />

    <title>HOME!</title>
  </head>
  <body>
    <%- include('./partial/header') %>
    <div>
      <% banner.forEach(function(bannerItem) { %> <% if (bannerItem.placement
      === 'Home Page' && !bannerItem.status && bannerItem.image) { %>
      <img class="w-100" src="<%- bannerItem.image %>" alt="Banner Image" />
      <% } %> <% }); %>
    </div>

    <div class="container mt-5">
      <div class="row">
        <% products.forEach(product => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4 text-uppercase">
          <a href="/products?id=<%=product._id%>" class="text-decoration-none">
            <div class="product-box text-center">
              <img
                src="<%= product.image[0] %>"
                alt="<%= product.name %>"
                width="160"
                height="160"
              />
              <h2 class="product-title"><%= product.name %></h2>
              <p class="product-description"><%= product.description %></p>
              <% if (product.discountexpiryDate && product.discountexpiryDate >
              new Date()) { %>
              <!-- Display the price with an overline -->

              <!-- Display the discounted price -->
              <p class="product-discounted-price product-price">
                &#8377;<%= product.price - product.discountprice %>
              </p>
              <p
                class="original-price m-0 p-0 text-muted"
                style="font-size: 14px; text-decoration: line-through"
              >
                &#8377;<%= product.price %>
              </p>
              <% } else { %>
              <!-- Display the regular price when there is no active offer -->
              <p class="product-price">&#8377;<%= product.price %></p>
              <% } %>
              <a class="add-to-cart">View details</a>
            </div>
          </a>
        </div>
        <% }) %>
        <a
          href="productlist"
          class="text-right w-100"
          style="text-decoration: underline"
          >view all products</a
        >
      </div>
    </div>

    <%- include('./partial/footer') %>
    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
