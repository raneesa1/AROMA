    <section>
      <div class="container py-5">
        <div class="row">
          <div class="col-lg-4">
            <div class="card mb-4 mb-lg-0">
              <div class="card-body p-0">
                <ul class="list-group list-group-flush rounded-3">
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i class="fas fa-globe fa-lg text-warning"></i>
                    <p class="mb-0">
                      <a href="profile">My Account</a>
                    </p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i class="fas fa-globe fa-lg text-warning"></i>
                    <p class="mb-0">
                      <a href="accountdetails">Account Details</a>
                    </p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i class="fab fa-github fa-lg" style="color: #333333"></i>
                    <p class="mb-0"><a href="myorder">My Order</a></p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i class="fab fa-twitter fa-lg" style="color: #000000"></i>
                    <p class="mb-0"><a href="cart">Shopping Cart</a></p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i
                      class="fab fa-instagram fa-lg"
                      style="color: #000000"
                    ></i>
                    <p class="mb-0"><a href="wishlist">Wishlist</a></p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i
                      class="fab fa-facebook-f fa-lg"
                      style="color: #000000"
                    ></i>
                    <p class="mb-0"><a href="address">Address</a></p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-4">
                    <i class="fab fa-twitter fa-lg" style="color: #000000"></i>
                    <p class="mb-0">Wallet</p>
                  </li>
                  <li class="list-group-item d-flex align-items-center p-3">
                    <i class="fab fa-twitter fa-lg" style="color: #000000"></i>
                    <p class="mb-0">
                      <button
                        type="button"
                        class="btn"
                        style="color: #000000"
                        data-toggle="modal"
                        data-target="#logoutModal"
                      >
                        Logout
                      </button>
                    </p>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <div class="col-lg-8">
            <div class="card mb-4">
              <div class="card-body">
                <form action="/updateaddress/<%=address._id%>" method="post">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Address name </label>
                    <input
                      type="addressname"
                      name="Addressname"
                      class="form-control"
                      value="<%=address.Addressname%>"
                    />
                  </div>
                  <!-- <hr /> -->

                  <div class="form-group">
                    <label for="exampleInputEmail1">First Name </label>
                    <input
                      type="text"
                      name="Firstname"
                      class="form-control"
                      value="<%=address.Firstname%>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Second Name </label>
                    <input
                      type="text"
                      name="Secondname"
                      class="form-control"
                      value="<%=address.Secondname%>"
                    />
                  </div>

                  <div class="form-group">
                    <label for="Address">Address </label>
                    <textarea class="form-control" rows="3" name="Address">
<%=address.Address%></textarea
                    >
                  </div>

                  <div class="form-group">
                    <label for="phonenumber">Phone number</label>
                    <input
                      type="text"
                      name="PhoneNumber"
                      class="form-control"
                      value="<%=address.PhoneNumber%>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="City">State</label>
                    <input
                      type="text"
                      name="State"
                      class="form-control"
                      value="<%=address.State%>"
                    />
                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>
                  <div class="form-group">
                    <label for="City">City</label>
                    <input
                      type="text"
                      name="City"
                      class="form-control"
                      value="<%=address.City%>"
                    />
                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>
                  <div class="form-group">
                    <label for="City">Landmark</label>
                    <input
                      type="text"
                      name="Landmark"
                      class="form-control"
                      value="<%=address.Landmark%>"
                    />
                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>

                  <div class="form-group">
                    <label for="exampleSelect1">Country</label>
                    <select
                      class="form-control"
                      name="Country"
                      id="exampleSelect1"
                      aria-valuenow="<%=address.Country%>"
                    >
                      <option>India</option>
                      <option>Africa</option>
                      <option>America</option>
                      <option>Pakistan</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="Postcode">Post Code</label>
                    <input
                      type="text"
                      name="Postcode"
                      class="form-control"
                      value="<%=address.Postcode%>"
                    />
                    <!-- <small id="emailHelp" class="form-text text-muted"
                      >We'll never share your email with anyone else.</small
                    > -->
                  </div>
                  <button
                    type="submit"
                    class="btn text-light btn-lg"
                    style="background-color: #000000; border-radius: 0%"
                    type="submit"
                    name="submit"
                    title="Edit Address"
                  >
                    SAVE
                  </button>
                  <button
                    class="btn btn-lg btn-light border-dark"
                    style="border-radius: 0%"
                  >
                    CANCEL
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
