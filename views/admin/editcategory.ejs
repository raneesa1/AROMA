              </div>

              <div class="icon-box">
                <a href=""
                  ><i
                    ><svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      fill="currentColor"
                      class="bi bi-person-circle"
                      viewBox="0 0 16 16"
                    >
                      <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                      <path
                        fill-rule="evenodd"
                        d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"
                      /></svg></i
                ></a>
              </div>
              <div class="icon-box">
                <a href=""
                  ><i
                    ><svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="17"
                      height="17"
                      style="color: rgb(0, 0, 0)"
                      fill="currentColor"
                      class="bi bi-heart"
                      viewBox="0 0 16 16"
                    >
                      <path
                        d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.920 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"
                      /></svg></i
                ></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="box">
      <div class="row">
        <div class="col-lg-6 mx-auto m-4">
          <div class="card">
            <div
              class="card-header text-center"
              style="background-color: rgb(0, 0, 0); color: aliceblue"
            >
              <h3>EDIT CATEGORY</h3>
            </div>
            <div class="card-body p-4">
              <form
                action="/admin/updatecategory/<%=categories._id%>"
                method="post"
                id="edit-cat"
              >
                <div class="mb-3">
                  <label for="name">Name</label>
                  <input
                    type="text"
                    name="name"
                    id="editedname"
                    class="form-control form-control-lg"
                    value="<%=categories.name%>"
                  />
                  <% if(err){ %>

                  <small style="color: red; margin-top: 10px"> <%=err%> </small>
                  <%}%>

                  <small id="editednameError" class="text-danger"></small>
                </div>

                <div class="mb-3">
                  <label for="description">Description</label>
                  <textarea
                    name="description"
                    id="editeddesciption"
                    class="form-control form-control-lg"
                  >
<%=categories.description%></textarea
                  >
                  <small id="editeddesciptionError" class="text-danger"></small>
                </div>
                <div class="mb-3">
                  <label for="">Offer Percentage%:</label>
                  <input
                    type="number"
                    name="categorydiscountper"
                    id="categoryediteddiscountprice"
                    class="form-control form-control-lg"
                    value="<%-categories.categorydiscountper%>"
                  />
                  <small
                    id="categoryeditedofferDiscountError"
                    class="text-danger"
                  ></small>
                </div>
                <div class="mb-3">
                  <label for="">Offer Expiry Date:</label>
                  <input
                    type="date"
                    name="categorydiscountexpiryDate"
                    id="categoryeditedofferDate"
                    class="form-control form-control-lg"
                    value="<%-categories.categorydiscountexpiryDate ? categories.categorydiscountexpiryDate.toISOString().split('T')[0] : ''%>"
                  />
                  <small
                    id="categoryeditedofferDateError"
                    class="text-danger"
                  ></small>
                </div>

                <input
                  style="
                    background-color: rgb(0, 0, 0);
                    border-color: rgb(0, 0, 0);
                    font-size: 12px;
                  "
                  type="submit"
                  name="submit"
                  value="Edit category"
                  class="btn btn-primary"
                />
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      document
        .getElementById("edit-cat")
        .addEventListener("submit", function (event) {
          function isEmpty(value) {
            const trimmedValue = value.trim();
            return trimmedValue === "";
          }

          const currentdate = new Date();

          const name = document.getElementById("editedname");
          const namenameValue = name.value;
          const nameError = document.getElementById("editednameError");

          const desciption = document.getElementById("editeddesciption");
          const desciptionValue = desciption.value;
          const desciptionError = document.getElementById(
            "editeddesciptionError"
          );

          const editedDiscount = document.getElementById(
            "categoryediteddiscountprice"
          );
          const editedDiscountValue = editedDiscount.value;
          const editedDiscountError = document.getElementById(
            "categoryeditedofferDiscountError"
          );

          const editedExpiryDate = document.getElementById(
            "categoryeditedofferDate"
          );
          const editedExpiryDateValue = editedExpiryDate.value;
          const editedExpiryDateError = document.getElementById(
            "categoryeditedofferDateError"
          );

          nameError.textContent = "";
          desciptionError.textContent = "";
          editedDiscountError.textContent = "";
          editedExpiryDateError.textContent = "";

          if (isEmpty(namenameValue)) {
            nameError.textContent = "name can't be empty";
            event.preventDefault();
          }

          if (isEmpty(desciptionValue)) {
            desciptionError.textContent = "Desciption can't be empty";
            event.preventDefault();
          }

          if (editedDiscountValue >= 100) {
            editedDiscountError.textContent =
              "discount percentage should not be more than or equal to 100%";
            event.preventDefault();
          }
          if (!isEmpty(editedDiscountValue) && editedDiscountValue == 0) {
            editedDiscountError.textContent = "discount percentage cant be 0%";
            event.preventDefault();
          }
          if (editedDiscountValue !== "" && isEmpty(editedExpiryDateValue)) {
            editedExpiryDateError.textContent =
              "Expiry date is required when discount amount is entered";
            event.preventDefault();
          }
          if (
            !isEmpty(editedExpiryDateValue) &&
            new Date(editedExpiryDateValue) < currentdate
          ) {
            editedExpiryDateError.textContent =
              "Expiry date should be after the current date";
            event.preventDefault();
          }
          if (!isEmpty(editedExpiryDateValue) && isEmpty(editedDiscountValue)) {
            editedDiscountError.textContent =
              "Discount percentage is required when an expiry date is entered";
            event.preventDefault();
          }
        });
    </script>
