        </div>
      </div>
    </div>
    <div class="box">
      <div class="row">
        <div class="col-lg-6 mx-auto m-4">
          <div class="card">
            <div
              class="card-header text-center"
              style="background-color: rgb(0, 0, 0); color: aliceblue"
            >
              <h5>ADD NEW CATEGORY</h5>
            </div>
            <div class="card-body">
              <% if(err){ %>

              <div id="errorMessage" style="color: red; margin-top: 10px">
                <%=err%>
              </div>
              <%}%>

              <form action="/admin/addcategory" method="post" id="add-form">
                <div class="mb-3">
                  <label for="name">Name</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    class="form-control form-control-lg"
                    placeholder="Enter category name"
                  />
                  <small id="nameError" class="text-danger"></small>
                </div>
                <div class="mb-3">
                  <label for="description">Description</label>
                  <textarea
                    name="description"
                    id="desciption"
                    class="form-control form-control-lg"
                    placeholder="Enter category description"
                  ></textarea>
                  <small id="desciptionError" class="text-danger"></small>
                </div>
                <div class="mb-3">
                  <label for="categorydiscountprice">Offer Percentage %:</label>
                  <input
                    type="number"
                    name="categorydiscountper"
                    id="categoryofferDiscount"
                    class="form-control form-control-lg"
                    placeholder="Enter the offer discount amount"
                  />
                  <small
                    id="categoryofferDiscountError"
                    class="text-danger"
                  ></small>
                </div>
                <div class="mb-3">
                  <label for="categorydiscountexpiryDate"
                    >Offer Expiry Date:</label
                  >
                  <input
                    type="date"
                    name="categorydiscountexpiryDate"
                    id="categoryofferDate"
                    class="form-control form-control-lg"
                    placeholder="Enter the Offer Expiry Date"
                  />
                  <small
                    id="categoryofferDateError"
                    class="text-danger"
                  ></small>
                </div>

                <input
                  style="
                    background-color: rgb(0, 0, 0);
                    border-color: rgb(0, 0, 0);
                    font-size: 12px;
                  "
                  type="submit"
                  name="submit"
                  value="Add category"
                  class="btn btn-primary"
                />
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script>
      document
        .getElementById("add-form")
        .addEventListener("submit", function (event) {
          function isEmpty(value) {
            const trimmedValue = value.trim();
            return trimmedValue === "";
          }

          const currentdate = new Date();

          const name = document.getElementById("name");
          const namenameValue = name.value;
          const nameError = document.getElementById("nameError");

          const desciption = document.getElementById("desciption");
          const desciptionValue = desciption.value;
          const desciptionError = document.getElementById("desciptionError");

          const discount = document.getElementById("categoryofferDiscount");
          const discountValue = discount.value;
          const discountError = document.getElementById(
            "categoryofferDiscountError"
          );
          const expiryDate = document.getElementById("categoryofferDate");
          const expiryDateValue = expiryDate.value;
          const expiryDateError = document.getElementById(
            "categoryofferDateError"
          );

          nameError.textContent = "";
          desciptionError.textContent = "";
          discountError.textContent = "";
          expiryDateError.textContent = "";

          if (isEmpty(namenameValue)) {
            nameError.textContent = "Name can't be empty";
            event.preventDefault();
          } else if (/[\d!@#$%^&*()_+{}\[\]:;<>,.?~\\/-]/.test(namenameValue)) {
            nameError.textContent =
              "Name should not contain numbers or symbols";
            event.preventDefault();
          }

          if (isEmpty(desciptionValue)) {
            desciptionError.textContent = "Desciption can't be empty";
            event.preventDefault();
          }
          if (discountValue >= 100) {
            discountError.textContent =
              "discount percentage should not be more than or equal to 100%";
            event.preventDefault();
          }
          if (discountValue !== "" && isEmpty(expiryDateValue)) {
            expiryDateError.textContent =
              "Expiry date is required when discount amount is entered";
            event.preventDefault();
          }
          if (
            !isEmpty(expiryDateValue) &&
            new Date(expiryDateValue) <= currentdate
          ) {
            expiryDateError.textContent =
              "Expiry date should be after the current date";
            event.preventDefault();
          }
        });
    </script>

    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
