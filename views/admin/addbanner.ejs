    <section>
      <!-- <div class="d-flex"> -->
      <div>
        <div class="box-container">
          <div class="box">
            <div class="row">
              <div class="col-lg-6 mx-auto m-4">
                <div class="card">
                  <div
                    class="card-header text-center"
                    style="background-color: rgb(0, 0, 0); color: aliceblue"
                  >
                    <h5>ADD NEW BANNER</h5>
                  </div>

                  <div class="card-body">
                     <% if(err){ %>
                        <div class="alert alert-danger" role="alert">
                          <%= err %>
                        </div>
                        <% } %> 
                    <form
                      action="/admin/addbanner"
                      method="post"
                      id="add-form"
                      enctype="multipart/form-data"
                    >
                      <div class="mb-3">
                        <div id="selectedImages" class="mb-3">
                          <img
                            src=""
                            id="displayimages0"
                            alt=""
                            style="max-width: 100px; max-height: 100px"
                            class="img-thumbnail"
                          />
                          <img
                            id="displayimages1"
                            src=""
                            alt=""
                            style="max-width: 100px; max-height: 100px"
                            class="img-thumbnail"
                          />
                          <img
                            id="displayimages2"
                            src=""
                            alt=""
                            style="max-width: 100px; max-height: 100px"
                            class="img-thumbnail"
                          />
                        </div>
                        <label for="images">Images</label>

                        <input
                          id="displayinput"
                          onchange="displayImages('displayinput','selectedImages')"
                          type="file"
                          name="image"
                          class="form-control-file"
                          multiple
                        />

                        <small id="imagesError" class="text-danger"></small>
                      </div>
                      <div class="mb-3">
                        <label for="placement">Placement</label>
                        <select
                          name="placement"
                          id="placement"
                          class="form-control form-control-lg"
                        >
                          <option value="Landing Page">Landing Page</option>
                          <option value="Home Page">Home Page</option>
                          <option value="Landing Page - Second Banner">
                            Landing Page - Second Banner
                          </option>
                          <option value="Landing Page - Third Banner">
                            Landing Page - Third Banner
                          </option>
                        </select>

                        <small id="placementError" class="text-danger"></small>
                      
                      <input
                        style="
                          background-color: rgb(0, 0, 0);
                          border-color: rgb(0, 0, 0);
                          font-size: 12px;
                        "
                        type="submit"
                        name="submit"
                        value="Add Banner"
                        class="btn btn-primary btn-lg mt-5 btn-block"
                      />
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script>
      document
        .getElementById("add-form")
        .addEventListener("submit", function (event) {
          const images = document.getElementById("displayinput");
          const imagesError = document.getElementById("imagesError");

          imagesError.textContent = "";

          if (images.files.length !== 1) {
            imagesError.textContent = "Please select exactly one image";
            event.preventDefault();
          } else {
            const allowedExtensions = ["jpg", "jpeg", "png", "gif", "webp"];
            const extension = images.files[0].name
              .split(".")
              .pop()
              .toLowerCase();

            if (!allowedExtensions.includes(extension)) {
              imagesError.textContent =
                "Please select a valid image file (jpg, jpeg, png, gif, webp)";
              event.preventDefault();
            }
          }
        });
    </script>
    <script>
      function displayImages(inputId, outputId) {
        var input = document.getElementById(inputId);
        var output = document.getElementById(outputId);
        output.innerHTML = ""; // Clear previous images

        if (input.files) {
          for (var i = 0; i < input.files.length; i++) {
            var img = document.createElement("img");
            img.src = URL.createObjectURL(input.files[i]);
            img.alt = "";
            img.style.maxWidth = "100px";
            img.style.maxHeight = "100px";
            img.classList.add("img-thumbnail");
            output.appendChild(img);
          }
        }
      }
    </script>

